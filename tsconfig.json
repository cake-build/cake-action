{
  "compilerOptions": {
    "target": "ESNext", // Specify the ECMAScript target version
    "module": "NodeNext", // Specify the module code generation
    "moduleResolution": "nodenext", // Specify how modules are resolved
    "outDir": "./lib", // Redirect output structure to the directory
    "rootDir": "./src", // Specify the root directory of input files
    "strict": true, // Enable all strict type-checking options
    "noImplicitAny": true, // Raise error on expressions and declarations with an implied 'any' type
    "esModuleInterop": true // Enables emit interoperability between CommonJS and ES Modules via creation of namespace objects for all imports
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
